<?xml version="1.0" encoding="utf-8" ?>
<vbox width="100%" height="100%">
    <button id="backBtn" text="Back" />
    <panel width="100%" height="100%">
        <header width="100%">
            <hbox width="100%">
                <label id="titleText" text="Song Title" width="100" verticalAlign="center" />
                <label text="Vol" width="20" verticalAlign="center" textAlign="right"/>
                <slider id="masterVolume" pos="100" verticalAlign="center" width="100%" hidden="true" />
                <button id="offBtn" text="All Off" width="80" hidden="true" />
                <button id="onBtn"  text="All On"  width="80" hidden="true" />
            </hbox>
        </header>
        <vbox id="loadAnim" width="100%" height="100%">
            <label text="Loading..." horizontalAlign="center"/>
            <spinner width="32" height="32" horizontalAlign="center"/>
        </vbox>
        <vbox id="channelList" width="100%" height="100%" hidden="true">
            <hbox width="100%">
                <!-- <button id="playBtn" text="▶" /> -->
                <button id="playBtn" text=">" />
                <slider id="playhead" width="100%" verticalAlign="center" />
                <!-- <button id="restartBtn" text="◀◀" /> -->
                <button id="restartBtn" text="Restart" />
            </hbox>
        </vbox>
    </panel>
</vbox>