<?xml version="1.0" encoding="utf-8" ?>
<vbox width="100%" height="100%">
    <panel text="" width="100%" height="100%" >
        <header>
            <button id="backBtn" text="Back" />
        </header>
        <vbox width="100%">
            <vbox id="loadAnim" width="100%" height="100%">
                <label id="loadText" text="Loading..." horizontalAlign="center"/>
                <spinner width="32" height="32" horizontalAlign="center"/>
            </vbox>
            <vbox id="content" width="100%" hidden="true">
                <hbox width="100%">
                    <label id="titleText" text="Song Title" width="100" verticalAlign="center" />
                    <label text="Vol" width="30" verticalAlign="center" textAlign="right"/>
                    <slider id="masterVolume" pos="100" verticalAlign="center" width="100%" />
                    <button id="offBtn" text="All Off" width="80" />
                    <button id="onBtn"  text="All On"  width="80" />
                </hbox>
                <vbox id="channelList" width="100%" height="100%">
                    <hbox width="100%">
                        <button id="playBtn" text=">" />
                        <slider id="playhead" width="100%" verticalAlign="center" />
                        <button id="restartBtn" text="Restart" />
                    </hbox>
                </vbox>
            </vbox>
        </vbox>
    </panel>
</vbox>